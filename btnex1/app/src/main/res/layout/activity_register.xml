<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:src="@drawable/ute_logo"
                android:contentDescription="Facebook Logo"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản mới"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Họ"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#ffffd4"
                android:layout_marginTop="20dp"
                android:inputType="textPersonName"/>


            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Tên"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#ffffd4"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Số di động hoặc email"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#ffffd4"
                android:layout_marginTop="10dp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mật khẩu mới"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#ffffd4"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/etBirthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ngày sinh (dd/mm/yyyy)"
                android:padding="10dp"
                android:background="@android:drawable/edit_text"
                android:backgroundTint="#ffffd4"
                android:layout_marginTop="10dp"
                android:inputType="date"/>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Đăng ký"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#1639a4"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã có tài khoản? Đăng nhập"
                android:textColor="#1877F2"
                android:textSize="15sp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>